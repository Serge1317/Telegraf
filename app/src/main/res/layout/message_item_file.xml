<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_user_file"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_margin_small"
        android:layout_marginEnd="@dimen/horizontal_margin_small"
        android:background="@drawable/background_user_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4">

        <ProgressBar
            android:id="@+id/chat_user_file_progress"
            android:layout_width="@dimen/message_btn_play_width"
            android:layout_height="@dimen/message_btn_play_height"
            android:gravity="start"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/chat_user_file"
            android:layout_width="@dimen/message_btn_play_width"
            android:layout_height="@dimen/message_btn_play_height"
            android:gravity="start"
            android:src="@drawable/ic_file_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chat_user_filename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/message_filename_margin"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chat_user_file"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="file_name.txt" />

        <TextView
            android:id="@+id/chat_user_time_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_small"
            android:layout_marginEnd="@dimen/horizontal_margin_small"
            android:gravity="end"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="9:30" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_receive_file"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:layout_marginTop="@dimen/horizontal_margin_small"
        android:background="@drawable/background_receive_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4">

        <ProgressBar
            android:id="@+id/chat_receive_file_progress"
            android:layout_width="@dimen/message_btn_play_width"
            android:layout_height="@dimen/message_btn_play_height"
            android:gravity="start"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chat_receive_file"
            android:layout_width="@dimen/message_btn_play_width"
            android:layout_height="@dimen/message_btn_play_height"
            android:gravity="start"
            android:src="@drawable/ic_file_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chat_received_filename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/message_filename_margin"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chat_receive_file"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="file_name.txt" />

        <TextView
            android:id="@+id/chat_receive_time_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_small"
            android:layout_marginEnd="@dimen/horizontal_margin_small"
            android:gravity="end"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="9:30" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>