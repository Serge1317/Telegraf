<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="@dimen/horizontal_margin_small"
        android:layout_marginTop="@dimen/horizontal_margin_small"
        android:background="@drawable/background_user_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chat_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hello, it's me!"
            android:textColor="@color/black"
            android:gravity="end"
            android:padding="@dimen/appPadding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/chat_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="9:30"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_marginEnd="@dimen/horizontal_margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat_user_message"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_receive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:layout_marginTop="@dimen/horizontal_margin_small"
        android:background="@drawable/background_receive_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/chat_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hello, it's me!"
            android:textColor="@color/black"
            android:gravity="start"
            android:padding="@dimen/appPadding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/chat_receive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="9:30"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_marginStart="@dimen/horizontal_margin_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat_receive_message"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>