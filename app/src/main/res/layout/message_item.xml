<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_user_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginEnd="@dimen/horizontal_margin_small"
        android:layout_marginTop="@dimen/horizontal_margin_small"
        android:visibility="gone"
        android:background="@drawable/background_user_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chat_user_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="@dimen/appPadding"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hello, it's me!" />

        <TextView
            android:id="@+id/chat_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="9:30"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:gravity="end"
            android:layout_marginEnd="@dimen/horizontal_margin_small"
            android:layout_marginStart="@dimen/horizontal_margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat_user_message"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_receive_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.8"
        android:visibility="gone"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:layout_marginTop="@dimen/horizontal_margin_small"
        android:background="@drawable/background_receive_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/chat_receive_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Hello, it's me!"
            android:textColor="@color/black"
            android:gravity="start"
            android:padding="@dimen/appPadding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/chat_receive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="9:30"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_marginEnd="@dimen/horizontal_margin_small"
            android:layout_marginStart="@dimen/horizontal_margin_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat_receive_message"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_user_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_max="wrap"
        app:layout_constraintHeight_percent="0.96"
        android:layout_marginEnd="@dimen/horizontal_margin_small"
        android:layout_marginTop="@dimen/horizontal_margin_small"
        android:background="@drawable/background_user_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/chat_user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_empty"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/chat_user_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/horizontal_margin_small"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="6dp"
            tools:text="9:30" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_receive_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_max="wrap"
        app:layout_constraintHeight_percent="0.96"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:layout_marginTop="@dimen/horizontal_margin_small"
        android:background="@drawable/background_receive_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/chat_receive_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:src="@drawable/ic_empty"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chat_receive_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="9:30" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>